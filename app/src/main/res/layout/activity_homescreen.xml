<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <android.support.v7.widget.Toolbar android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="#1fb6ff"
    android:minHeight="105dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
        android:layout_width="290dp"
        android:layout_height="105dp"
        android:gravity="end"
        android:paddingRight="5dp"
        android:src="@drawable/fitnesswithman"
        android:contentDescription="@string/fitnesstrax" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/welcome"
            android:textSize="24sp"
            android:background="#cae1ed"
            android:gravity="center_horizontal"
            android:padding="15.5dp" /></LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/button_profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="#3c5a69"
                android:src="@drawable/profilebutton" />
            <ImageButton
                android:id="@+id/button_foodlog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="#306681"
                android:src="@drawable/foodlogbutton"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/button_addfood"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="#306681"
                android:src="@drawable/addfoodbutton"/>
            <ImageButton
                android:id="@+id/button_searchnut"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="#3c5a69"
                android:src="@drawable/searchnutbutton"/>
        </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
            <ImageButton
                android:id="@+id/button_progress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="#3c5a69"
                android:src="@drawable/progressbutton"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="#306681" />
    </LinearLayout>
</LinearLayout>